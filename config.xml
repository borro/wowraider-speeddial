<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" id="http://wowraider.ru/splash.cdiml" defaultlocale="ru" viewmodes="minimized" version="1.0">
	<name short="WowRaider Speeddial">WoW Raider Speed Dial Extension</name>
	<description>Расширение позволяет следить за последними новостями, комментариями и прочим на сайте http://wowraider.ru/</description>
	<author href="http://aggardo.ru/">Borro</author>
	<icon src="images/icon.png"/>
    <feature name="opera:speeddial" required="true">
        <param name="url" value="http://wowraider.ru"/>
    </feature>
    <feature name="opera:share-cookies" required="false"/>
	<access origin="http://wowraider.ru" subdomains="true"/>
	<preference name="feed" value="news,blues:ru,blues:ru:bluestart,blues:en,blues:en:bluestart,blogs,posts,comments,streams,questions,member,plf,glf,slf" />
	<preference name="update_interval" value="180" />
	<preference name="frequency_change" value="5" />
	<preference name="smooth_change" value="1" />
</widget>
